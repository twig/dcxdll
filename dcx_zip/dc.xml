									<item caption="-" />
									<item caption="these" icon="20" flags="v" />
									<item caption="are" icon="25" />
									<item caption="toolbar" icon="23" />
									<item caption="buttons" icon="22" />
								</control>
								<pane />
							</control>
							<control type="panel" caption="StatusBar Preview">
