						<control type="panel">
							<control type="panel" caption="ProgressBar Preview">
								<pane />
									<control id="1" eval="1" height="25" type="pbar" styles="smooth" caption="$(%d%%,0) Completed" />
								<pane />
							</control>
							<control type="panel" caption="TreeView Preview">
